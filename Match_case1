day = input("Enter a day of the week (Monday-Sunday): ").lower()

match day:
 case "monday":
  print("Aargh, mondays...")
 case "tuesday":
  print("Will friday ever get here?")
 case "wednesday":
  print("Hump day!")
 case "thursday":
  print("Almost there..")
 case "friday":
  print("TGIF!")
 case "saturday" | "sunday":
  print("weekend vibes, hurray!")
 case _:
  print("invalid day entered.")
